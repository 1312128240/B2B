    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="car.tzxb.b2b.Uis.Order.OrderStatusActivity">

    <include layout="@layout/base_actionbar" />


    <car.myview.Tab.NavigationTabStrip
        android:id="@+id/nts_center"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        app:nts_active_color="@color/red"
        app:nts_color="@color/red"
        app:nts_corners_radius="3.5dp"
        app:nts_factor="1"
        app:nts_gravity="bottom"
        app:nts_inactive_color="@color/colorBlack2"
        app:nts_titles="@array/tabtitle"
        app:nts_type="point"
        app:nts_typeface="fonts/moon.otf" />

    <car.myview.SpringView.SpringView
        android:id="@+id/sv"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


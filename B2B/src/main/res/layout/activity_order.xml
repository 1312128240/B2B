<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="car.tzxb.b2b.Uis.Order.OrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:paddingTop="25dp"
        android:paddingBottom="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/navigationbar_icon_return" />

        <RadioGroup
            android:id="@+id/rg_order_swich"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_visit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/left_swich"
                android:button="@null"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="送货上门"
                android:textColor="@color/textview"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/rb_self"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/right_swich"
                android:button="@null"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="门店自取"
                android:textColor="@color/textview"
                android:textSize="13sp" />
        </RadioGroup>

    </RelativeLayout>



    <android.support.v4.widget.NestedScrollView
      android:layout_marginTop="1dp"
      android:layout_weight="1"
      android:layout_width="match_parent"
      android:layout_height="0dp">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <include layout="@layout/order_header"/>

          <include layout="@layout/order_footer"/>

      </LinearLayout>

  </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_order_footerbar"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:text="实付款"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_submit_order"
            android:background="@color/red"
            android:text="提交订单"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_width="200px"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginTop="3dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_custmenr_art"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:background="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/ll_ev_title"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/iv_custmenr_art">

        <TextView
            android:id="@+id/tv_custmenr_name"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="你的剑就" />

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_custment_date"
            android:textColor="@color/grayA"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:singleLine="true"
            android:text="2017-12-20xxxxxxxxx" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_custmenr_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:padding="2dp"
        android:layout_alignLeft="@+id/ll_ev_title"
        android:layout_below="@+id/ll_ev_title"/>

 <android.support.v7.widget.RecyclerView
     android:id="@+id/recy_ev_img"
     android:layout_below="@+id/tv_custmenr_content"
     android:layout_alignLeft="@+id/ll_ev_title"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

 </android.support.v7.widget.RecyclerView>


     <TextView
         android:id="@+id/tv_ev_specification"
         android:layout_marginTop="3dp"
         android:layout_below="@+id/recy_ev_img"
         android:text="规格"
         android:textColor="@color/colorBlack"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/ll_ev_title" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/orderXq_parent"
    android:orientation="vertical"
    tools:context="car.tzxb.b2b.Uis.Order.OrderXqActivity">

    <include layout="@layout/base_actionbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/order_header"/>

            <include layout="@layout/order_xq_footer"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/ll_order_status_infor"
        android:elevation="4dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|end">

        <TextView
            android:id="@+id/tv_view3"
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg5"
            android:padding="5dp"
            android:text="删除订单" />

        <TextView
            android:id="@+id/tv_view2"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg5"
            android:padding="5dp"
            android:text="提醒发货" />
        <TextView
            android:id="@+id/tv_view1"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:textColor="#ff4e3c"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg7"
            android:padding="5dp"
            android:text="提醒发货" />

    </LinearLayout>

</LinearLayout>

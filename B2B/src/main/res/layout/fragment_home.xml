<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    tools:context="car.tzxb.b2b.fragments.HomeFragment">

    <include
        android:id="@+id/home_fragment_actionbar"
        layout="@layout/search_bar" />


    <car.myview.StickyScrollView
        android:id="@+id/sticky_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_fragment_actionbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/home_banner"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/colorWhite">

            </com.youth.banner.Banner>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_track"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="@color/colorWhite"
                android:nestedScrollingEnabled="false">

            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:id="@+id/rl_home_pager_activity"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/activity_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_activity1"
                    android:layout_width="95dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="15dp"
                    tools:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/iv_activity2"
                    android:layout_width="95dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_activity1"
                    tools:src="@mipmap/ic_launcher" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="6dp">

                <ImageView
                    android:id="@+id/iv_app_notifi"
                    tools:src="@mipmap/ic_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOT"
                    android:textColor="@color/red" />

                <car.tzxb.b2b.Views.TextSwitchView
                    android:id="@+id/textSwitcher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:inAnimation="@anim/text_push_up_in"
                    android:outAnimation="@anim/text_push_up_out"
                    android:textAlignment="center">

                </car.tzxb.b2b.Views.TextSwitchView>

                <TextView
                    android:id="@+id/tv_more_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/store_icon_right"
                    android:gravity="center_vertical"
                    android:text="查看更多"
                    android:textColor="@color/grayBlack"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/iv_self_produc1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    tools:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorLightGray3" />

                <ImageView
                    android:id="@+id/iv_self_produc2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    tools:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_home_find_shop"
                android:layout_width="match_parent"
                android:layout_height="195dp">

                <ImageView
                    android:id="@+id/iv_find_shop_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="25dp">

                    <ImageView
                        android:id="@+id/iv_find_shop1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_find_shop2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </RelativeLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/classify_tablayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorWhite"
                app:tabIndicatorColor="@color/red"
                app:tabIndicatorHeight="0.5dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/red"
                app:tabTextColor="#403030">

            </android.support.design.widget.TabLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/brand_tablayout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/colorWhite"
                android:tag="sticky"
                app:tabIndicatorColor="@color/red"
                app:tabIndicatorHeight="0dp"
                app:tabMode="scrollable">

            </android.support.design.widget.TabLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_home_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingTop="6dp"
                android:paddingBottom="50dp"
                android:scrollbars="none">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </car.myview.StickyScrollView>

    <!--  <car.myview.MyNestScollview
          android:id="@+id/home_scollview"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/home_fragment_actionbar">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <include layout="@layout/home_header" />



          </LinearLayout>

      </car.myview.MyNestScollview>-->

    <ImageView
        android:id="@+id/iv_folatbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:elevation="3dp"
        android:src="@mipmap/home_icon_top"
        android:visibility="invisible" />
</RelativeLayout>

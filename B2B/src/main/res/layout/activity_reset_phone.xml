<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="car.tzxb.b2b.Uis.MeCenter.AccountSecurityPackage.ResetPhoneActivity">
   <include layout="@layout/base_actionbar"/>

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="新手机"
            android:textColor="@color/colorBlack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_new_phone"
            android:inputType="number"
            android:maxLength="11"
            android:textCursorDrawable="@drawable/cursor_color"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="验证码"
            android:textColor="@color/colorBlack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_new_phone_yzm"
            android:textCursorDrawable="@drawable/cursor_color"
            android:hint="@string/yzm_pass"
            android:background="@null"
            android:inputType="number"
            android:maxLength="4"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <car.myview.CountDown.CountDownTextView
            android:id="@+id/tv_get_yzm"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg1"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_new_phone_ok"
        android:text="完成"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg10"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</LinearLayout>

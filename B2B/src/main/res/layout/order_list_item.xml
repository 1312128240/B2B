<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="5dp"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <TextView
     android:id="@+id/tv_order_list_shopname"
     android:textColor="@color/colorBlack2"
     tools:text="华杰汽修用品旗舰店"
     android:drawableRight="@mipmap/store_icon_right"
     android:drawableLeft="@mipmap/list_icon_shop"
     android:drawablePadding="10dp"
     android:gravity="center_vertical"
     android:layout_width="wrap_content"
     android:layout_height="30dp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_order_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <EditText
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:background="@color/colorLightGray3"
        android:hint="@string/mesg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personal_data_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="car.tzxb.b2b.Uis.MeCenter.PersonalDataActivity">

    <include layout="@layout/base_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头像"
            android:textColor="@color/colorBlack2" />

        <car.myview.CircleImageView.CircleImageView
            android:id="@+id/civ_infor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="6dp"
            tools:background="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/store_icon_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1.5dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/colorBlack2" />

        <TextView
            android:id="@+id/tv_nick"
            android:gravity="end"
            android:layout_weight="1"
            android:drawableRight="@mipmap/store_icon_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:textColor="@color/colorBlack2"
            tools:text="无双剑姬" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1.5dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/colorBlack2" />

        <TextView
            android:id="@+id/tv_sex"
            android:drawablePadding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@mipmap/store_icon_right"
            android:gravity="end"
            android:textColor="@color/colorBlack2"
            tools:text="男" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="门店位置"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_province"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableRight="@mipmap/store_icon_right"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="省-市-区"
                android:lines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F5F5F5" />

            <EditText
                android:id="@+id/et_open_shop_address"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="start"
                android:hint="@string/open_shop4"
                android:padding="3dp"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F5F5F5" />

            <TextView
                android:id="@+id/tv_open_shop_marker"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="6dp"
                android:textColor="#FFA100"
                android:drawableRight="@mipmap/store_icon_right"
                android:drawableLeft="@drawable/list_icon_explain"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:text="已标记地图位置"
                android:lines="1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

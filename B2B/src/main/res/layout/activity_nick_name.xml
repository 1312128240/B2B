<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="car.tzxb.b2b.Uis.MeCenter.NickNameActivity">
<include layout="@layout/base_actionbar"/>
    <EditText
        android:id="@+id/et_nick"
        android:lines="1"
        android:maxLength="30"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:hint="请输入您的昵称"
        android:textCursorDrawable="@drawable/cursor_color"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="1-20字符,可由英文,数字,汉字组成"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_set_nick"
        android:background="@drawable/bg1"
        android:text="确定"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_cancle_nick"
        android:background="@drawable/bg5"
        android:text="取消"
        android:textColor="@color/colorLightGray2"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

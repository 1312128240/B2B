<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="car.tzxb.b2b.fragments.ShoppingCarFragment">

    <include layout="@layout/base_actionbar" />

    <LinearLayout
        android:id="@+id/ll_shoppingcar_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_shopping_car"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="45dp"
            android:gravity="center_vertical">
           <CheckBox
               android:id="@+id/cb_shoppingcar_all"
               android:button="@null"
               android:layout_margin="10dp"
               android:background="@drawable/check_box_select"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="全选"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tv_shoppingcar_total_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:paddingRight="10dp"
                tools:text="合计:￥126"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tv_shoppingcar_total_number"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/red1"
                android:gravity="center"
                tools:text="结算(0)"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <include
        android:id="@+id/empty_shopping_car"
        android:visibility="gone"
        layout="@layout/empty_shoppingcar"/>

</LinearLayout>

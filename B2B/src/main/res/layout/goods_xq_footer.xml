<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_goods_xq_evaluate_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户评价"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_goods_xq_evaluate_hpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:gravity="end"
            android:text="好评率"
            android:textColor="@color/text_black" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_ev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_all_pj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="10dp">


        <TextView
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:background="@drawable/bg7"
            android:gravity="center"
            android:text="查看全部评价"
            android:textColor="@color/red" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:paddingRight="10dp">

        <car.myview.CircleImageView.XCRoundRectImageView
            android:id="@+id/iv_goods_xq_shop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/bucket_no_picture" />

        <TextView
            android:id="@+id/tv_goods_xq_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_goods_xq_shop"
            android:layout_toRightOf="@+id/iv_goods_xq_shop"
            android:text="华杰汽修用品专卖店"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_goods_xq_shop_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_goods_xq_shop"
            android:layout_toRightOf="@+id/iv_goods_xq_shop"
            android:text="昆明市"
            android:textColor="@color/gray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_xq_goods_shop_collect"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_goods_xq_shop_city"
            android:background="@drawable/bg1"
            android:drawableLeft="@drawable/list_icon_collection"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="收藏"
            android:textColor="@color/colorWhite" />

        <LinearLayout
            android:elevation="2dp"
            android:layout_below="@+id/tv_xq_goods_shop_collect"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@mipmap/store_icon_right"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="全部商品" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@mipmap/store_icon_right"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="进入店铺" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:drawableLeft="@drawable/shop_icon_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorWhite"
        android:padding="8dp"
        android:text="店铺热销"
        android:textColor="@color/colorBlack" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_xq_img"
        android:layout_marginTop="8dp"
        android:padding="6dp"
        android:drawablePadding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:drawableLeft="@drawable/shop_icon_title"
        android:text="商品详情"
        android:textColor="@color/colorBlack2" />

    <car.myview.MyListView
        android:id="@+id/lv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </car.myview.MyListView>

</merge>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="car.tzxb.b2b.Uis.MeCenter.MyGoldActivity">

    <include layout="@layout/base_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/singin_bg1"
        android:gravity="center_vertical"
        android:orientation="horizontal">
     <LinearLayout
         android:orientation="vertical"
         android:gravity="center"
         android:layout_weight="1"
         android:layout_width="0dp"
         android:layout_height="wrap_content">
       <TextView
           tools:text="20个"
           android:id="@+id/tv_my_gold"
           android:textColor="@color/colorWhite"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
        <TextView

            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的金币"
            android:textColor="@color/colorWhite" />

     </LinearLayout>
        <TextView
            android:id="@+id/tv_click_sign"
            android:lineSpacingExtra="6dp"
            android:background="@drawable/circle_bg"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="点击签到"
            android:textColor="@color/red" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                tools:text="5天"
                android:id="@+id/tv_my_gold_sign"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView

                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="连续签到"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="金币收支明细"
        android:padding="10dp"
        android:textColor="@color/colorBlack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_sign_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>

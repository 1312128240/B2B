<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_offline_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGray1"
        android:padding="8dp"
        android:text="线下支付"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_offline_payment"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_discounts"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            tools:src="@mipmap/ic_launcher" />
         <CheckBox
             android:id="@+id/cb_selet_discounts_type"
             android:visibility="gone"
             android:background="@drawable/check_box_select"
             android:layout_marginRight="10dp"
             android:button="@null"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sign_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:textColor="@color/colorBlack2"
            tools:text="2018-0-10" />

        <TextView
            android:id="@+id/tv_sign_succeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorBlack2"
            tools:text="签到成功" />

        <TextView
            android:id="@+id/tv_sign_gold_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            tools:text="+2" />

        <CheckBox
            android:id="@+id/cb_zf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/check_box_select"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
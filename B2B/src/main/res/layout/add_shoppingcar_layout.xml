<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/add_shoppingcar_top"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="70dp"
                android:background="@color/colorLightGray1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


                <TextView
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格" />
                <RadioGroup
                    android:layout_marginTop="10dp"
                    android:id="@+id/rg_add_shoppingcar_gg"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                </RadioGroup>
                <TextView
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粘稠度" />
                <RadioGroup
                    android:layout_marginTop="10dp"
                    android:id="@+id/rg_add_shoppingcar_stick"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                </RadioGroup>
                <TextView
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格" />
                <RadioGroup
                    android:layout_marginTop="10dp"
                    android:id="@+id/rg_add_shoppingcar_discounts"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                </RadioGroup>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="数量"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <include

                        layout="@layout/more_or_less_layout"/>
                </LinearLayout>
            </LinearLayout>

          <Button
              android:layout_alignParentBottom="true"
              android:background="@color/red"
              android:text="加入购物车"
              android:textColor="@color/colorWhite"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">


            <car.myview.CircleImageView.XCRoundRectImageView
                android:id="@+id/iv_add_shoppingcar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg5"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_add_shoppingcar_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_add_shoppingcar"
                android:text="¥888"
                android:textColor="@color/red1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/iv_add_shoppingcar"
                android:text="库存:123"
                android:textColor="@color/gray"
                android:textSize="13sp" />
        </RelativeLayout>


    </FrameLayout>
</RelativeLayout>
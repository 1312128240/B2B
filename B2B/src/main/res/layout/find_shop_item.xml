<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="3dp"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    android:layout_marginTop="20px"
    android:layout_height="600px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_find_shop"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="30px"
            android:layout_marginTop="20px"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_find_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_find_shop"
            android:layout_toRightOf="@+id/iv_find_shop"
            android:textColor="@color/colorBlack2"
            tools:text="嘉实多官方旗舰店" />

        <TextView
            android:id="@+id/tv_find_shop_fk"
            android:textColor="@color/grayBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_find_shop_name"
            android:layout_marginTop="16px"
            android:layout_toRightOf="@+id/iv_find_shop"
            android:textSize="12sp"
            tools:text="今日访客量: 4512" />

        <TextView
            android:id="@+id/tv_go_find_shop_xq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="30px"
            android:paddingBottom="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:text="进店"
            android:textSize="13sp"
            android:textColor="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_find_shop">

            <ImageView
                android:id="@+id/iv_find_shop1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.65" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_find_shop2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_find_shop3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
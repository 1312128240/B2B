<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_goods_xq_explain_top"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <TextView
            android:text="服务说明"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/colorBlack2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
       <TextView
           android:text="平台自营"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="10dp"
           android:layout_marginBottom="10dp"
           android:drawablePadding="10dp"
           android:drawableLeft="@drawable/list_icon_explain"
           android:textColor="@color/colorBlack2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorBlack"
            android:text="平台自营商品,质检审核全程覆盖，正品保障"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="24小时发货"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/list_icon_explain"
            android:textColor="@color/colorBlack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorBlack"
            android:text="承诺24小时内发货(节假日平台促销活动期间具体发货时间以平台通知为准,除却不抗拒因素不能按时发货)"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="7天无理由退货"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/list_icon_explain"
            android:textColor="@color/colorBlack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorBlack"
            android:layout_weight="1"
            android:text="符合消费者法规,支持7天内退换货"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/btn_colse_goodsxq_explain"
            android:text="确认"
            android:textSize="15sp"
            android:background="@color/red"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </LinearLayout>

</RelativeLayout>
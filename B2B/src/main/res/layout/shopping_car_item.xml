<?xml version="1.0" encoding="utf-8"?>
<car.myview.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="1dp"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        
        <ImageView
            android:id="@+id/iv_shoppingcar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/bucket_no_picture" />

        <TextView
            android:id="@+id/tv_commodity_name"
            android:lines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_shoppingcar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_shoppingcar_size"
            android:layout_toRightOf="@+id/iv_shoppingcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_commodity_name"
            android:textColor="@color/gray"
            android:textSize="13sp"
            tools:text="规格" />

        <TextView
            android:id="@+id/tv_commodity_price"
            android:layout_toRightOf="@+id/iv_shoppingcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="￥1331"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_shoppingcar_num"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            tools:text="x1" />
        <include
            android:id="@+id/more_or_less"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/more_or_less_layout"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_shoppingcar_delete"
        android:gravity="center"
        android:text="删除"
        android:ems="1"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:background="@color/red"
        android:layout_width="60dp"
        android:layout_height="match_parent" />
</car.myview.SwipeMenuLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tolas="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/xq_banner"
        android:layout_width="match_parent"
        android:layout_height="360dp">

    </com.youth.banner.Banner>

    <TextView
        android:id="@+id/tv_goods_xq_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xq_banner"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg7"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/red"
        android:textSize="12sp"
        tolas:text="自营" />

    <TextView
        android:id="@+id/tv_xq_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xq_banner"
        android:layout_margin="10dp"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:textStyle="bold"
        tolas:text="嘉实多新一代磁护" />

    <TextView
        android:id="@+id/tv_xq_goods_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_xq_goods_name"
        android:layout_below="@+id/tv_xq_goods_name"
        android:layout_marginBottom="15dp"
        android:textColor="@color/red"
        tolas:text="¥ 129" />

    <TextView
        android:id="@+id/tv_xq_goods_cost_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_xq_goods_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/tv_xq_goods_current_price"
        android:textColor="@color/colorLightGray2"
        android:textSize="12sp"
        tolas:text="原价:¥146" />

    <TextView
        android:id="@+id/tv_goods_xq_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_xq_goods_current_price"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorLightGray2"
        android:textSize="12sp"
        tolas:text="月销量: 32165" />


    <TextView
        android:id="@+id/tv_goods_xq_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_xq_goods_current_price"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        tolas:text="云南昆明" />

    <TextView
        android:id="@+id/lines"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/tv_goods_xq_city"
        android:layout_marginTop="5dp"
        android:background="@color/colorLightGray3" />

    <TextView
        android:id="@+id/tv_gg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lines"
        android:layout_margin="10dp"
        android:text="规格属性"
        android:textColor="@color/colorBlack2" />

    <car.myview.RadioGroupEx
        android:id="@+id/rg_gg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

    </car.myview.RadioGroupEx>

    <TextView
        android:id="@+id/lines2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/rg_gg"
        android:background="@color/colorLightGray3" />

    <LinearLayout
        android:id="@+id/ll_goods_xq_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lines2"
        android:padding="10dp">

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="说明"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/list_icon_explain"
            android:drawablePadding="3dp"
            android:text="平台自营"
            android:textColor="@color/colorBlack"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/list_icon_explain"
            android:drawablePadding="3dp"
            android:text="12小时内发货"
            android:textColor="@color/colorBlack"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/list_icon_explain"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/store_icon_right"
            android:ellipsize="end"
            android:lines="1"
            android:text="交易保障"
            android:textColor="@color/colorBlack"
            android:textSize="13sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_discounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_goods_xq_explain"
        android:animateLayoutChanges="true"
        android:padding="10dp">

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="优惠"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_discounts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/store_icon_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_discounts"
        android:padding="10dp">

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="积分"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买可返120积分"
            android:textColor="@color/colorBlack2" />
    </LinearLayout>

</RelativeLayout>
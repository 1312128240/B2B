<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tolas="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/xq_banner"
        android:layout_width="match_parent"
        android:layout_height="360dp">

    </com.youth.banner.Banner>
   <TextView
       android:id="@+id/tv_goods_xq_type"
       tolas:text="自营"
       android:layout_below="@+id/xq_banner"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="12dp"
       android:paddingLeft="2dp"
       android:paddingRight="2dp"
       android:textSize="12sp"
       android:textColor="@color/red"
       android:background="@drawable/bg7"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_xq_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xq_banner"
        android:layout_margin="10dp"
        tolas:text="嘉实多新一代磁护"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_xq_goods_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_xq_goods_name"
        android:layout_below="@+id/tv_xq_goods_name"
        android:layout_marginBottom="15dp"
        tolas:text="¥ 129"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_xq_goods_cost_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_xq_goods_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/tv_xq_goods_current_price"
        tolas:text="原价:¥146"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_goods_xq_express"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_xq_goods_current_price"
        android:layout_below="@+id/tv_xq_goods_current_price"
        android:text="快递:0.00"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_goods_xq_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_xq_goods_current_price"
        android:layout_centerHorizontal="true"
        tolas:text="月销量: 32165" />


    <TextView
        android:id="@+id/tv_goods_xq_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_xq_goods_current_price"
        tolas:text="云南昆明" />

       <TextView
           android:background="@color/colorLightGray3"
           android:layout_below="@+id/tv_goods_xq_city"
           android:layout_width="match_parent"
           android:layout_marginTop="5dp"
           android:layout_height="10dp" />
        <LinearLayout
            android:id="@+id/ll_goods_xq_explain"
            android:layout_below="@+id/tv_goods_xq_city"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说明"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />
            <TextView
                android:drawableLeft="@drawable/list_icon_explain"
                android:drawablePadding="3dp"
                android:textSize="13sp"
                android:text="平台自营"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:drawableLeft="@drawable/list_icon_explain"
                android:drawablePadding="3dp"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorBlack"
                android:text="12小时内发货"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:drawableLeft="@drawable/list_icon_explain"
                android:lines="1"
                android:ellipsize="end"
                android:drawablePadding="3dp"
                android:textSize="13sp"
                android:drawableRight="@mipmap/store_icon_right"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorBlack"
                android:text="交易保障"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>




</RelativeLayout>
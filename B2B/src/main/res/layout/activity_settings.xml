<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="car.tzxb.b2b.Uis.MeCenter.SettingsActivity">

    <include layout="@layout/base_actionbar" />

    <LinearLayout
        android:id="@+id/ll_my_infor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.5dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:padding="10dp">

        <car.myview.CircleImageView.CircleImageView
            android:id="@+id/civ_headimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_user_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/store_icon_right"
            tools:text="1598954173"
            android:textColor="@color/colorBlack2" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorWhite"
        android:drawableRight="@mipmap/store_icon_right"
        android:padding="10dp"
        android:text="会员中心"
        android:textColor="@color/colorBlack2" />

    <LinearLayout
        android:id="@+id/ll_setting_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址管理"
            android:textColor="@color/colorBlack2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/store_icon_right"
            android:gravity="end"
            android:text="新增/修改地址"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_account_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorWhite"
        android:drawableRight="@mipmap/store_icon_right"
        android:padding="10dp"
        android:text="账户安全"
        android:textColor="@color/colorBlack2" />

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorWhite"
        android:drawableRight="@mipmap/store_icon_right"
        android:padding="10dp"
        android:text="意见反馈"
        android:textColor="@color/colorBlack2" />

    <LinearLayout
        android:id="@+id/ll_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于同致相伴"
            android:textColor="@color/colorBlack2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/store_icon_right"
            android:gravity="end"
            android:text="@string/version" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:textColor="@color/colorBlack2" />

        <TextView
            android:id="@+id/tv_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/store_icon_right"
            android:gravity="end"
            android:text="0.00M" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_exit_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg1"
        android:text="退出登录"
        android:textColor="@color/colorWhite" />

</LinearLayout>

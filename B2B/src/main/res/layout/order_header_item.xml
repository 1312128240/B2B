<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:id="@+id/order_header_parent"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
     android:padding="8dp">

    <CheckBox
        android:id="@+id/cb_item"
        android:button="@null"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:visibility="gone"
        android:layout_marginRight="6dp"
        android:background="@drawable/check_box_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_order_status_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/list_icon_shop"
        android:drawablePadding="6dp"

        android:drawableRight="@mipmap/store_icon_right"
        android:gravity="center"
        android:textColor="@color/colorBlack2"
        tools:text="嘉实多旗舰店" />

    <TextView
        android:id="@+id/tv_order_status_describe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:textColor="@color/red"
        tools:text="待付款" />
</LinearLayout>
